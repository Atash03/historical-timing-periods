{
  "name": "timing-periods",
  "version": "1.0.0",
  "description": "A modern React application for exploring historical timing periods",
  "main": "index.js",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "start": "serve -s dist",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "format": "biome format ./src",
    "format:fix": "biome format --write ./src",
    "check": "biome check ./src",
    "check:fix": "biome check --write ./src",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "react",
    "typescript",
    "webpack",
    "scss",
    "historical"
  ],
  "author": "Atash03",
  "license": "MIT",
  "dependencies": {
    "gsap": "^3.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swiper": "^11.2.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.23",
    "css-loader": "^7.1.1",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.2.4",
    "sass": "^1.77.0",
    "sass-loader": "^14.2.1",
    "serve": "^14.2.4",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "biome check --write"
  }
}
